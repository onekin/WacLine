<?xml version="1.0" encoding="UTF-8"?>
<plugin 
  id="com.ps.consul.eclipse.ui.transform.javascript.serverplugin" 
  name="Client Transformation Module" 
  version="1.0.0" 
  provider-name="pure-systems GmbH">
  
  <extension 
    id="Java Script Transformation Module" 
    name="Java Script Transformation Module" 
    point="com.ps.consul.transformer.module">
    
    <module 
      name="Java Script Transformation Module" 
      version="1.0" 
      include="/variant"
      exclude=""
      type="client"
      id="com.ps.consul.eclipse.ui.transform.javascript.modul"
      update="true"
      partial="true"
      image="javascript_module">
      
      <description>Triggers the transformation of Javascript code.</description>

      <parameters>
        <parameter name="javascriptfile" type="ps:path" optional="false">
          <description>The Java Script file name.</description>
        </parameter>
        <parameter name="outputfile" type="ps:path" optional="true">
          <description>The output file name.</description>
        </parameter>
        <parameter name="partial" type="ps:boolean" optional="false">
          <description>Select "true", if the given Java Script can be transformed with a Variant Description in partial configuration mode.
          Select "false" otherwise.</description>
          <default>false</default>
        </parameter>
      </parameters>
      
    </module>
    
  </extension>

</plugin>
